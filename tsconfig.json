{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5",
        "lib": ["esnext", "dom"],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
